// Zed keymap
//
// For information on binding keys, see the Zed
// documentation: https://zed.dev/docs/key-bindings
//
// To see the default key bindings run `zed: open default keymap`
// from the command palette.
[
  {
    "bindings": {
      // Avoid quitting
      "ctrl-q": null,
      "ctrl-shift-w": null
    }
  },
  {
    "context": "Workspace",
    "bindings": {}
  },
  {
    "context": "Editor && vim_mode == normal",
    "bindings": {
      "q": "pane::CloseActiveItem",
      "shift-q": "zed::Quit",
      "space g q": [
        "workspace::SendKeystrokes",
        "space t m ctrl-shift-w escape"
      ],
      "space e": "workspace::ToggleLeftDock",
      "ctrl-a": ["workspace::SendKeystrokes", "g g V G"],
      "space h p": "editor::ToggleSelectedDiffHunks",
      "space t m": "terminal_panel::ToggleFocus",
      "space f m": "editor::Format",
      "space g r": "editor::FindAllReferences",
      "space d a b": "pane::CloseOtherItems",
      "space h s": "git::StageAndNext",
      "space h u": "git::UnstageAndNext",
      "space h r": "git::Restore",
      "space s o": ["workspace::SendKeystrokes", "v i p : sort enter"],
      "space t n": ["task::Spawn", { "task_name": "Run single test" }],
      "space t f": ["task::Spawn", { "task_name": "Test file" }],
      "space t l": ["task::Spawn", { "task_name": "Run last test" }],
      // "space t l": "task::Rerun",
      "space a t": ["task::Spawn", { "task_name": "Open alternate file" }]
    }
  },
  {
    "context": "Editor && vim_mode == visual",
    "bindings": {
      "ctrl-y": "editor::Copy"
    }
  },
  {
    "context": "Editor && vim_mode == visual && !VimWaiting && !VimObject",
    "bindings": {
      "ctrl-p": ["vim::Paste", { "preserve_clipboard": true }],
      "ctrl-shift-v": ["workspace::SendKeystrokes", "x i ctrl-shift-v escape"]
    }
  },
  {
    "context": "Terminal",
    "bindings": {
      "escape": "workspace::ToggleBottomDock",
      "ctrl-shift-w": "pane::CloseActiveItem"
    }
  },
  {
    "context": "VimControl && !menu",
    "bindings": {
      "ctrl-q": "vim::ToggleRecord"
    }
  },
  {
    "context": "!ContextEditor > Editor && mode == full",
    "bindings": {
      "ctrl-enter": null,
      "ctrl-/": "assistant::InlineAssist"
    }
  }
]
